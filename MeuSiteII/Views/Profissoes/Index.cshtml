@model IEnumerable<MeuSiteII.Models.Profissao>

@{
    ViewData["Title"] = "Index";
}

<h1>Profissoes</h1>

<p>
    <a asp-action="Create">Cadastrar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProfissaoId">Editar</a> |

                @*<a asp-action="Details" asp-route-id="@item.ProfissaoId">Detalhe</a> |*@
                
                <a asp-action="Delete" asp-route-id="@item.ProfissaoId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
